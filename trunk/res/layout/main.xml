<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:background="#fff">
	<ImageView android:src="@drawable/logo" android:layout_width="130dip"
		android:layout_height="110dip" android:layout_weight="1"
		android:scaleType="fitXY"></ImageView>
	<ImageView android:src="@drawable/menu"
		android:layout_height="wrap_content" android:layout_gravity="center_horizontal"
		android:scaleType="fitXY" android:layout_weight="1" 
		android:paddingRight="4dip" 
		android:paddingLeft="4dip"
		android:layout_width="wrap_content"></ImageView>
	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:layout_weight="1">
		<ImageButton android:id="@+id/ViewMapButton" android:src="@drawable/selector"
			android:scaleType="fitXY" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:background="#fff"
			android:clickable="true" android:focusable="true"
			android:paddingBottom="2dip" android:paddingRight="2dip" android:paddingLeft="4dip"
			android:layout_weight="1">
		</ImageButton>
		<ImageButton android:id="@+id/PlanButton" android:src="@drawable/selector2"
			android:scaleType="fitXY" android:layout_height="wrap_content"
			android:clickable="true" android:focusable="true" android:background="#fff"
			android:layout_width="wrap_content" android:layout_weight="1"
			android:paddingBottom="2dip" android:paddingLeft="2dip" android:paddingRight="4dip">
		</ImageButton>
	</LinearLayout>
	<LinearLayout android:layout_weight="1"
		android:layout_width="fill_parent" android:layout_height="wrap_content">
		<ImageButton android:id="@+id/PrefButton" android:src="@drawable/selector3"
			android:scaleType="fitXY" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:background="#fff"
			android:clickable="true" android:focusable="true" 
			android:paddingTop="2dip" android:paddingRight="2dip" android:paddingLeft="4dip"
			android:paddingBottom="4dip"
			android:layout_weight="1">
		</ImageButton>
		<ImageButton android:id="@+id/AboutButton" android:src="@drawable/selector4"
			android:scaleType="fitXY" android:layout_height="wrap_content"
			android:clickable="true" android:focusable="true" android:background="#fff"
			android:layout_width="wrap_content"
			android:paddingTop="2dip" android:paddingLeft="2dip" android:paddingRight="4dip"
			android:paddingBottom="4dip"
			android:layout_weight="1">
		</ImageButton>
	</LinearLayout>
</LinearLayout>
